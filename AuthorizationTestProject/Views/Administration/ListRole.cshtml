@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Role";
}
<h1>All Roles</h1>

<a class="btn btn-primary mb-3" style="width: auto" asp-action="CreateRole" asp-controller="Administration">
    Add New Role
</a>


<br />

@if (Model.Any())
{
   
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                @*@if (((@role.Id == "b1df3536-d2f7-4d6c-8d41-56940aedad57")|| role.Name=="User") && User.IsInRole("Contoller"))
                {
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                }*@
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Create Yet!.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button to Create Role
            </h5>
            <a class="btn btn-primary" style="width: auto" asp-action="CreateRole" asp-controller="Administration">
                create Role
            </a>
        </div>
    </div>
}