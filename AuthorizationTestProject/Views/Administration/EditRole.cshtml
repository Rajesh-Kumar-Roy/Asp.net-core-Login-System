@model AuthorizationTestProject.ViewModel.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h1>EditRole</h1>
<form method="post"class="mt-3">
    <div asp-validation-summary="All"class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="Id" class="form-control"disabled/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName"class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-10">
            <input type="submit"class="btn btn-primary"value="update"/>
            <a asp-action="ListRole"class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>user In this role.</h3>
        </div>
        <div class="card-body">
           @if(Model.User.Any())
           {
               foreach (var user in Model.User)
               {
                   <h5 class="card-title">@user</h5>
               }
           }
           else
           {
               <h5 class="card-title">No at the moment</h5>
           }
        </div>
        <div class="card-footer">
           
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id"class="btn btn-primary" style="width: auto;"> Add or Remove User</a>
        </div>
    </div>
</form>
